<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="120dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/temperature_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:text="11°"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/im_weather_now"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/temperature_now"
            android:layout_toEndOf="@+id/temperature_now" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/weather_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="22sp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="晴"/>
   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-09-20"
        android:id="@+id/weather_date"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26°"
        android:id="@+id/temperature_high"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:textSize="22sp"
        android:layout_alignBottom="@+id/weather_now"
        android:layout_toRightOf="@+id/weather_now"
        android:layout_toEndOf="@+id/weather_now" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="/"
            android:layout_below="@+id/temperature_now"
            android:layout_toRightOf="@+id/temperature_high"
            android:layout_toEndOf="@+id/temperature_high" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12°"
        android:id="@+id/temperature_low"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/temperature_high"
        android:layout_alignBottom="@+id/temperature_high"
        android:layout_toRightOf="@+id/temperature_now"
        android:layout_toEndOf="@+id/temperature_now" />



    </LinearLayout>
</LinearLayout>